contract Remote1 =
  entrypoint set : (int) => int

contract RemoteCall =
    record state = { i : int }

    entrypoint init(x) = { i = x }

    stateful entrypoint set( x : int) : int =
        let old = state.i
        put(state{ i = x })
        old

    stateful entrypoint call(r : Remote1, x : int, g : int) : int =
        r.set(gas = g, value = 10, x)

    entrypoint get() = state.i



